    <sql id="selectSysHbaseTableVo">
        select table_id, namespace_id, table_name, online_regions, offline_regions, failed_regions, split_regions, other_regions, table_desc, del_flag, disable_flag, create_by, create_time, update_by, update_time, status, remark from sys_hbase_table
